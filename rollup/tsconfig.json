{
  "compilerOptions": {
    "lib": [
      "esNEXT",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "pretty": true,
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "$/*": [
        "src/utils/*"
      ],
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**"
  ]
}